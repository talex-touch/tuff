import { ref } from 'vue'

const loading = ref(false)
const splitLoading = ref(false)

async function handleClick() {
  if (loading.value) return
  loading.value = true
  setTimeout(() => {
    loading.value = false
  }, 1200)
}

async function handleRun() {
  if (splitLoading.value) return
  splitLoading.value = true

  setTimeout(() => {
    splitLoading.value = false
  }, 1200)
}
