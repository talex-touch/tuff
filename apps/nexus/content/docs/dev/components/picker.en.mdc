---
code: |
  <script setup lang="ts">
  import { ref } from 'vue'

  const visible = ref(false)
  const value = ref<(string | number)[]>(['b', 2])

  const columns = [
    {
      key: 'letter',
      options: [
        { value: 'a', label: 'A' },
        { value: 'b', label: 'B' },
        { value: 'c', label: 'C' },
      ],
    },
    {
      key: 'number',
      options: [
        { value: 1, label: '1' },
        { value: 2, label: '2' },
        { value: 3, label: '3' },
        { value: 4, label: '4', disabled: true },
      ],
    },
  ]
  </script>

