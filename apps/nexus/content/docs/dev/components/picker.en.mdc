          Open picker
        </TxButton>
        <div style="color: var(--tx-text-color-secondary);">
          Value: {{ value }}
        </div>
      </div>

      <TxPicker v-model="value" v-model:visible="visible" title="Picker" :columns="columns" />
    </div>
  </template>
