{
  "name": "@talex-touch/tuff",
  "type": "module",
  "version": "2.4.7-beta.1",
  "private": false,
  "description": "A strong adaptation more platform all-tool program.",
  "author": "TalexDreamSoul <TalexDreamSoul@Gmail.com>",
  "license": "MPL-2.0 license",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "node scripts/sync-core-package.mjs",
    "typecheck": "pnpm -F @talex-touch/core-app run typecheck",
    "sync:core-pkg": "node scripts/sync-core-package.mjs",
    "core:dev": "pnpm -F @talex-touch/core-app run dev",
    "core:build": "pnpm -F @talex-touch/core-app run build",
    "core:build:beta": "pnpm -F @talex-touch/core-app run build:beta",
    "core:build:snapshot": "pnpm -F @talex-touch/core-app run build:snapshot",
    "core:build:release": "pnpm -F @talex-touch/core-app run build:release",
    "core:build:snapshot:win": "pnpm -F @talex-touch/core-app run build:snapshot:win",
    "core:build:snapshot:mac": "pnpm -F @talex-touch/core-app run build:snapshot:mac",
    "core:build:snapshot:linux": "pnpm -F @talex-touch/core-app run build:snapshot:linux",
    "core:build:release:win": "pnpm -F @talex-touch/core-app run build:release:win",
    "core:build:release:mac": "pnpm -F @talex-touch/core-app run build:release:mac",
    "core:build:release:linux": "pnpm -F @talex-touch/core-app run build:release:linux",
    "core:build:docs": "pnpm -F @talex-touch/core-app run build:docs",
    "docs:dev": "pnpm -F @talex-touch/docs run dev",
    "docs:build": "pnpm -F @talex-touch/docs run build",
    "utils:test": " pnpm -F test run test",
    "utils:publish": "pnpm -F @talex-touch/utils run publish",
    "version": "node scripts/version-sync.mjs",
    "version:patch": "node scripts/version-sync.mjs --patch",
    "version:minor": "node scripts/version-sync.mjs --minor",
    "version:major": "node scripts/version-sync.mjs --major"
  },
  "dependencies": {
    "@sentry/vite-plugin": "^4.6.0",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/parser": "^8.46.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "22.16.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@clerk/shared",
      "@parcel/watcher",
      "@sentry/cli",
      "@swc/core",
      "browser-tabs-lock",
      "bufferutil",
      "core-js",
      "electron",
      "electron-clipboard-ex",
      "electron-winstaller",
      "esbuild",
      "extract-file-icon",
      "get-windows",
      "simple-git-hooks",
      "tesseract.js",
      "typeit",
      "utf-8-validate",
      "vue-demi"
    ],
    "overrides": {
      "@types/node": "24.1.0",
      "vite": "7.0.6"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,vue}": [
      "eslint --cache --fix --max-warnings=0"
    ]
  }
}
