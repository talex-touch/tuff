{
  "name": "@talex-touch/tuffex-ui",
  "version": "0.2.0",
  "author": "TalexDreamSoul<TalexDreamSoul@gmail.com>",
  "description": "TUFF UI - Modern Vue3 component library with beautiful animations and tactile experience.",
  "keywords": [
    "tuff",
    "tuff-ui",
    "talex-touch",
    "vue3",
    "components",
    "ui-library",
    "animation",
    "tactile",
    "glassmorphism"
  ],
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/lib/index.js"
    },
    "./style.css": "./dist/style.css",
    "./*": "./*"
  },
  "scripts": {
    "build": "gulp -f packages/script/build/index.ts",
    "build:vite": "vite build",
    "component:create": "esno ./utils/create/index.ts",
    "comp:create": "esno ./utils/createComponent/index.ts",
    "comp:play": "pnpm run -C playground/vue-vite-playground dev",
    "comp:new": "esno ./utils/createTestVue/index.ts",
    "dev": "vitepress dev docs --port 8000 --host",
    "docs:dev": "vitepress dev docs --port 8000 --host",
    "docs:new": "esno ./utils/createVitepressComp/index.ts",
    "docs:build": "vitepress build docs"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "@vueuse/core": "^13.0.0"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.17",
    "@types/gulp-autoprefixer": "^0.0.37",
    "@types/gulp-sass": "^5.0.4",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.0",
    "esno": "^4.8.0",
    "gulp": "^5.0.0",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-sass": "^5.1.0",
    "sass": "^1.89.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.8.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitepress": "^1.5.0",
    "vue": "^3.5.0"
  }
}
