{
  "id": "com.tuffex.translation",
  "name": "touch-translation",
  "version": "1.0.1",
  "author": "TalexTouch Team",
  "sdkapi": 251212,
  "icon": {
    "type": "file",
    "value": "assets/logo.svg"
  },
  "description": "一款全平台资源聚合翻译平台，支持多种翻译服务",
  "main": "index.js",
  "dev": {
    "enable": false,
    "address": "http://localhost:3333/",
    "source": false
  },
  "permissions": {
    "required": ["clipboard.read", "network.internet"],
    "optional": ["clipboard.write"]
  },
  "permissionReasons": {
    "clipboard.read": "读取剪贴板中的待翻译文本",
    "network.internet": "连接翻译服务 API（如 Google、DeepL、百度等）",
    "clipboard.write": "将翻译结果复制到剪贴板"
  },
  "features": [
    {
      "id": "touch-translate",
      "name": "翻译",
      "desc": "翻译选中的文本或剪贴板内容",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "keywords": ["translate", "翻译", "fy", "fanyi"],
      "push": true,
      "priority": 10,
      "acceptedInputTypes": ["text"],
      "platform": {
        "win32": true,
        "darwin": true,
        "linux": true
      },
      "commands": [
        {
          "type": "over",
          "value": ["fy", "翻译", "translate"]
        }
      ]
    },
    {
      "id": "multi-source-translate",
      "name": "多源翻译",
      "desc": "同时使用多个翻译源进行翻译",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "keywords": ["multi", "多源", "翻译"],
      "push": true,
      "priority": 5,
      "acceptedInputTypes": ["text"],
      "platform": {
        "win32": true,
        "darwin": true,
        "linux": true
      },
      "commands": [
        {
          "type": "over",
          "value": ["fy-multi", "多源翻译"]
        }
      ],
      "interaction": {
        "type": "webcontent",
        "path": "/multi-translate"
      }
    },
    {
      "id": "screenshot-translate",
      "name": "截图翻译",
      "desc": "截取屏幕区域进行 OCR 识别并翻译",
      "icon": {
        "type": "file",
        "value": "assets/logo.svg"
      },
      "keywords": ["screenshot", "截图", "ocr", "识别"],
      "push": false,
      "priority": 5,
      "acceptedInputTypes": ["text", "image"],
      "platform": {
        "win32": true,
        "darwin": true,
        "linux": true
      },
      "commands": [
        {
          "type": "over",
          "value": ["s-fy", "截图翻译"]
        }
      ],
      "interaction": {
        "type": "widget",
        "path": "screenshot-translate"
      }
    }
  ]
}
